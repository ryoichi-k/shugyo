<h1>足跡作成</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @footprint, local: true) do |f| %>

      <%= f.label :アドバイス %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.label :参考文献 %>
      <%= f.text_field :references, class: 'form-control' %>

      <%= f.submit "足跡作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>